---
pagination:
  data: collections.all
  size: 20
  alias: entries
layout: home.njk
permalink: /sitemap/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
---
<h1>Sitemap</h1>
<table>
  <thead>
    <tr>
      <th>Page Title</th>
    </tr>
  </thead>
  <tbody>
{%- for entry in entries %}
  <tr>
    <td><a href="{{ entry.url }}"><code>{{ entry.data.title or entry.url }}</code></a></td>
  </tr>
{%- endfor %}
  </tbody>
</table>